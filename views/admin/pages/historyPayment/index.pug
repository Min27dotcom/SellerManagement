.app
  header.header.header__fixed
    .grid.wide
      nav.header__navbar
        ul.header__navbar-list
          .header__logo
            img.header__logo-img(src='/assets/images/logo.png' alt='Logo')
        ul.header__navbar-list
          li.header__navbar-item
            .header__search
              .header__search-input-wrap
                input.header__search-input(type='text' placeholder='enter your search...')
                button.header__search-btn
                  i.header__search-btn-icon.fa-solid.fa-magnifying-glass
          li.header__navbar-item
            button.notify__btn
              i.header__navbar-icon.fa-solid.fa-bell
          li.header__navbar-item
            button.notify__btn
              i.header__navbar-icon.fa-solid.fa-gear
          li.header__navbar-item.header__navbar-user
            img.header__navbar-user-img(src='/assets/images/nguyet_cute.jpg' alt='Em Nguyet Cute')
            span.header__navbar-user-name Min_27
            ul.header__navbar-user-menu
              li.header__navbar-user-item
                a.header__navbar-user-item-link(href='') My Account
              li.header__navbar-user-item.header__navbar-user-item--separate
                a(href='') Logout
  .app__container.app__container-fixed
    .grid.wide
      .row.body__nav
        | #{pageTitle}
      .row.body__sub-nav
        .col.l-6
          button.create-acc-btn
            | CREATE ACCOUNT
            i.fa-solid.fa-user-plus
        .col.l-6
          .grid
            .row.flex-filter-sort
              .col.l-3
                .btn-dropdown-box
                  i.btn-dropdown1.fa-solid.fa-caret-down
                  |                                             FILTER
                  i.fa-solid.fa-filter
              .col.l-3
                .btn-dropdown-box
                  i.btn-dropdown2.fa-solid.fa-caret-down
                  |                                             SORT
                  i.fa-solid.fa-sort
        .filter__form
          form#form-1.form.filter__form-box(action='' method='POST')
            .form-group
              p.form-group-title Filter By
              .form-group-radio
                input(type='radio' name='filter__method' value='by_age')
                | By Age
                input(type='radio' name='filter__method' value='by_status')
                | By Status
            .form-group.form-group-age
              p.form-group-title Filter By Age
              .form-group-radio
                input(type='radio' name='age' value='Age <= 25')
                | Age
            .form-group.form-group-status
              p.form-group-title Filter By Status
              .form-group-radio
                input(type='radio' name='status' value='active')
                | Active
                input(type='radio' name='status' value='inactive')
                | Inactive
            button.form-submit.form-submit-display Filter
        .sort__form
          form#form-2.form-2.sort__form-box(action='' method='POST')
            .form-group.form-group-sort
              p.form-group-title Sort By Username
              .form-group-radio
                input(type='radio' name='username' value='desc')
                | DESC
                input(type='radio' name='username' value='asc')
                | ASC
            button.form-submit.form-submit-display2 Sort
      .row.header__table
        .col.l-2
          .column__name
            | #{col_1}
        .col.l-2
          .column__name
            | #{col_2}
        .col.l-2
          .column__name
            | #{col_3}
        .col.l-2
          .column__name
            | #{col_4}
        .col.l-2
          .column__name
            | #{col_5}
        .col.l-2
          .column__name
            | #{col_6}
      .grid.wide.body__table
      each item in payments
        .row.table__row
          .col.l-2
            .table__row-item
              .user__box-item
                img.user_img(src=item.avatar alt=item.username)
              | #{item.username}
          .col.l-2
            .table__row-item
              | #{item.formatDateOfOrder}
          .col.l-2
            .table__row-item
              | #{item.address}
          .col.l-2
            .table__row-item
              | #{item.username}
          .col.l-2
            .table__row-item
              | #{item.phoneNumber}
          .col.l-2
