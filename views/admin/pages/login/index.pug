  link(rel='stylesheet' href='/css/login.css')
.main
  form#form-2.form(action='/' method='POST')
    h3.heading #{pageTitle}
    .spacer
    .form-group
      label.form-label(for='username') Username
      input#username.form-control(name='username' type='text' placeholder='Ex: john_doe')
      span.form-message
    .form-group
      label.form-label(for='password') Password
      input#password.form-control(name='password' type='password' placeholder='Enter your password')
      span.form-message
    button.form-submit Login
script(src='/js/login.js')
script.
  document.addEventListener('DOMContentLoaded', function () {
  // Mong muốn của chúng ta
  Validator({
  form: '#form-2',
  formGroupSelector: '.form-group',
  errorSelector: '.form-message',
  rules: [
  Validator.isRequired('#username', 'Enter your username'),
  Validator.isEmail('#email'),
  Validator.minLength('#password', 6),
  Validator.isRequired('#password_confirmation'),
  Validator.isConfirmed('#password_confirmation', function () {
  return document.querySelector('#form-1 #password').value;
  }, 'Password Error!')
  ],
  onSubmit: function (data) {
  // Call API
  console.log(data);
  }
  });
  Validator({
  form: '#form-2',
  formGroupSelector: '.form-group',
  errorSelector: '.form-message',
  rules: [
  Validator.isEmail('#email'),
  Validator.minLength('#password', 6),
  ],
  onSubmit: function (data) {
  // Call API
  console.log(data);
  }
  });
  });

    
