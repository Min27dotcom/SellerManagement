            .check-box-all 
              input(type='checkbox' name='checkall' value='' )
                
      .grid.wide.body__table
      each item in accounts
        .row.table__row
            .col.l-2
              .table__row-item
                .user__box-item
                  img.user_img(src=item.avatar alt=item.username)
                | #{item.username}
            .col.l-2
              .table__row-item
                | #{item.phoneNumber}
            .col.l-2
              .table__row-item
                | #{item.address}
            .col.l-2
              .table__row-item
                | #{item.dateOfBirth}
            .col.l-2
              .table__row-item
                | #{item.formatLastEdited}
