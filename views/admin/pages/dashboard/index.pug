    ul.pagination.home-product__pagination
      if(pagination.currentPage > 1)
        li.pagination-item
          a(class="pagination-item__link" href="" link-pagination=pagination.currentPage-1)
            i.pagination-item__icon.fa-solid.fa-angle-left
